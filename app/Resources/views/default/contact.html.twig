{% extends 'base.html.twig' %}

{% block title %}Contactez nous - {{ parent() }}{% endblock %}

{% block stylesheets %}
  <style type="text/css">
    .page-wrapper {
      background-image: url('{{ asset("images/background03.jpg") }}');
    }
    .contact-icon {
      margin-top: 20px;
    }
    textarea {
      color: #fff;
    }
  </style>
{% endblock %}

{% block page_body %}
  <div class="page-middle">
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
          <h4 class="green">Contactez nous</h4>
          <p class="lead contact-info"><span>Horaire / Jour</span> <span>De 8h00 à 12h00</span> <span>( Samedi Uniquement )</span></p>
          <div class="row">
            <div class="col-sm-4">
              <div class="contact-icon">
                <div class="icon"><i class="pe-7s-map-marker"></i></div>
                <div class="title">Adresse</div>
                <p>Angré, Cocody, Abidjan, Côte d'ivoire</p>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="contact-icon">
                <div class="icon"><i class="pe-7s-call"></i></div>
                <div class="title">Téléphone</div>
                <p>(+225) 08555621</p>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="contact-icon">
                <div class="icon"><i class="pe-7s-mail"></i></div>
                <div class="title">Email</div>
                <p>linterpretelefilm@gmail.com</p>
              </div>
            </div>
          </div>
          {#% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-success fade in">
              <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
              <h4>{{ flashMessage }}</h4>
            </div>
          {% endfor %#}
          {{ form_start(form, {"attr": {"class":"contact-form"}}) }}
            <div class="row">
              <div class="col-sm-6">
                <div class="row">
                  <div class="col-sm-6">
                    <div class="form-group">
                      {{ form_widget(form.name, {"attr": {"class":"form-control" }}) }}
                      <label for="contact-name">Nom*</label>
                      {{ form_errors(form.name) }}
                    </div>
                  </div>
                  <div class="col-sm-6">
                    <div class="form-group">
                      {{ form_widget(form.email, {"attr": {"class":"form-control" }}) }}
                      <label for="contact-email">Email*</label>
                      {{ form_errors(form.email) }}
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-12">
                    <div class="form-group">
                      {{ form_widget(form.subject, {"attr": {"class":"form-control" }}) }}
                      <label for="contact-subject">Sujet*</label>
                      {{ form_errors(form.subject) }}
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group textarea">
                  {{ form_widget(form.content, {"attr": {"rows": "4" }}) }}
                  <label for="contact-message">Votre message ici</label>
                  {{ form_errors(form.content) }}
                </div>
                <button type="submit" class="button white large">Envoyer</button>
                <div id="contact-loading" class="alert alert-info form-alert">
                  <span class="message">Loading...</span>
                </div>
                <div id="contact-success" class="alert alert-success form-alert">
                  <span class="message">Success!</span>
                </div>
                <div id="contact-error" class="alert alert-danger form-alert">
                  <span class="message">Error!</span>
                </div>
              </div>
            </div>
          {{ form_end(form) }}
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block javascripts %}{% endblock %}
