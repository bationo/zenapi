{% extends "base.html.twig" %}

{% block title %}Profil - {{ parent() }}{% endblock %}

{% block stylesheet %}{% endblock %}

{% block breadcumb %}
            <header class="main-header">
                <div class="container">
                    <h1 class="page-title">Mon compte</h1>

                    <ol class="breadcrumb pull-right">
                        <li><a href="{{ path( 'es_front' ) }}">Accueil</a></li>
                        <li class="active">Mon compte</li>
                    </ol>
                </div>
            </header>
{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <section>
            	<img src="{{ asset( app.user.webPath ) }}" alt="avatar" class="img-responsive imageborder" width="180" height="180">
            </section><hr>
            <section>
                    <a href="{{ path('profil_edit') }}" type="submit" class="btn btn-ar btn-success btn-block">Modifier mon profil</a>
            </section>
        </div>
        <div class="col-md-8">
            <section>
                <div class="panel panel-primary">
                    <div class="panel-heading"><i class="fa fa-user"></i> General Information</div>
                    <table class="table table-striped">
                        <tr>
                            <th>Nom utilisateur</th>
                            <td>{{ app.user.username }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td><a href="#">{{ app.user.email }}</a></td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ app.user.profil.nom }}</td>
                        </tr>
                        <tr>
                            <th>Telephone</th>
                            <td>{{ app.user.profil.telephone }}</td>
                        </tr>
                        <tr>
                            <th>Date d' inscription</th>
                            <td>12 - 05 - 2016</td>
                        </tr>
                    </table>
                </div>
            </section>

            <section>
                <h2 class="section-title">Dernier Commentaire</h2>
                <div class="list-group">
