                        </div>
                      
    {% endblock %}

{% block body %}




<!--Page content-->
                    <!--===================================================-->
                    <section id="page-content">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="panel">
                                    <div class="panel-heading">
                                        <div class="panel-control">
                                            <button class="btn btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></button>
                                        </div>
                                        <h3 class="panel-title">Editer mon Profil </h3>
                                    </div>
                                    <!-- BASIC FORM ELEMENTS -->
                                    <!--===================================================-->
                                        {{ form_start(edit_form, {"attr":{ "class":"panel-body form-horizontal"}}) }}
                                       
                                             {% for flashMessage in app.session.flashbag.get('notice') %}
     
                                                      
                                                      <div class="alert alert-dismissible alert-success"  style="color:green; font-weight:bold"  >
                                                  {{ flashMessage }}</a>.
                                                </div>
                                                  {% endfor %}

                                         <!--Text Input-->
                                        <div class="form-group">
                                             {{ form_label(edit_form.image.tempFile, "Image de Profil", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                                            <div class="col-md-9">
                                                {{ form_widget(edit_form.image.tempFile , { 'attr' : {'placeholder' : 'Téléphone',  'class' : 'form-control'  }} ) }}
                                                <small class="help-block">{{ form_errors(edit_form.image.tempFile , { 'attr' : {'class' : 'red' }} ) }}</small>
                                            </div>
                                        </div>

                                         <!--Text Input-->
                                        <div class="form-group">
                                             {{ form_label(edit_form.ListeSpecialite, "Spécialité", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
