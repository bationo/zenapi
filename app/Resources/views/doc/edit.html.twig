                                                {{ form_widget(edit_form.ListeSpecialite , { 'attr' : {'placeholder' : 'Téléphone',  'class' : 'form-control'  }} ) }}
                                                <small class="help-block">{{ form_errors(edit_form.ListeSpecialite , { 'attr' : {'class' : 'red' }} ) }}</small>
                                            </div>
                                        </div>
                                                                      
                                        <!--Text Input-->
                                        <div class="form-group">
                                             {{ form_label(edit_form.titre, "Titre", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                                            <div class="col-md-9">
                                                {{ form_widget(edit_form.titre , { 'attr' : {'placeholder' : 'Titre',  'class' : 'form-control'  }} ) }}
                                                <small class="help-block">{{ form_errors(edit_form.titre , { 'attr' : {'class' : 'red' }} ) }}</small>
                                            </div>
                                        </div>

                                         <!--Text Input-->
                                        <div class="form-group">
                                             {{ form_label(edit_form.nom, "Nom Complet", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                                            <div class="col-md-9">
                                                {{ form_widget(edit_form.nom , { 'attr' : {'placeholder' : 'Nom',  'class' : 'form-control'  }} ) }}
                                                <small class="help-block">{{ form_errors(edit_form.nom , { 'attr' : {'class' : 'red' }} ) }}</small>
                                            </div>
                                        </div>
                                         <!--Text Input-->
                                        <div class="form-group">
                                             {{ form_label(edit_form.mail, "Mail", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                                            <div class="col-md-9">
                                                {{ form_widget(edit_form.mail , { 'attr' : {'placeholder' : 'Mail',  'class' : 'form-control'  }} ) }}
                                                <small class="help-block">{{ form_errors(edit_form.mail , { 'attr' : {'class' : 'red' }} ) }}</small>
                                            </div>
                                        </div>

                                         <!--Text Input-->
                                        <div class="form-group">
                                             {{ form_label(edit_form.tel, "Tel  " ~ docteur.professionnel.user.pays.indicatif, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
