                                        </div>



                                 
        <div style="float:right">
            <button type="submit"   class="btn btn-pink">Editer</button>
        </div>
                               
                               
                               

                               
                               
                              {{ form_end(edit_form) }}

                                

        <div class="btn-group record_actions">

            <a class="btn btn-info" href="{{ path('docteur_pro_profil') }}">
