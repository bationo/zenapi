{% extends "AdminBundle::layout.html.twig" %}

{% block title %}{{ '%entity% list'|trans({'%entity%': 'Groupe'}, 'admin') }} - {{ parent() }}{% endblock %}

{% block body %}
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h1 class="box-title">{{ '%entity% list'|trans({'%entity%': 'Groupe'}, 'admin') }}</h1>
                        <a href="{{ path('admin_user_group_new' ) }}" class="btn btn-md btn-primary btn-flat pull-right"><i class="fa fa-plus"></i> {{ 'Create a new entry'|trans({}, 'admin') }}</a>
                    </div>
                    <div class="box-body">
                        <table class="table table-striped table-hover table-bordered records_list">
                            <thead>
                            <tr>
                                <th scope="col">Nom</th>
                                <th scope="col">RÃ´les</th>
                                <th scope="col">{{ 'Actions'|trans({}, 'admin') }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for group in entities %}
                                <tr>
                                    <td><a href="{{ path('admin_user_group_show', {id: group.id}) }}">{{ group.name }}</a></td>
                                    <td>{{ group.roles|join(', ') }}</td>
                                    <td>
                                        <div class="btn-group">
                                            <a class="btn btn-default btn-sm" href="{{ path('admin_user_group_show', {id: group.id}) }}">
                                                <i class="fa fa-file-o"></i> {{ 'show'|trans({}, 'admin') }}
                                            </a>
                                            <a class="btn btn-default btn-sm" href="{{ path('admin_user_group_edit', {id: group.id}) }}">
                                                <i class="fa fa-edit"></i> {{ 'edit'|trans({}, 'admin') }}
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
