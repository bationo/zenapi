{% extends "AdminBundle::layout.html.twig" %}

{% block title %}{{ '%entity% creation'|trans({'%entity%': 'Groupe'}, 'admin') }} - {{ parent() }}{% endblock %}

{% block body %}
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h1 class="box-title">{{ '%entity% creation'|trans({'%entity%': 'Groupe'}, 'admin') }}</h1>
                    </div>
                    <div class="box-body">
                        {{ form_start(form, {action: path('admin_user_group_create')}) }}
                        <div class="form-group">
                            <label for="">Nom</label>
                            {{ form_errors( form.name ) }}
                            {{ form_widget( form.name, { 'attr': { 'class': 'form-control', 'placeholder': '' } } ) }}
                        </div>
                        <div class="form-group">
                            <label for="">RÃ´les (plusieurs: maintenir CTRL)</label>
                            {{ form_errors( form.roles ) }}
                            {{ form_widget( form.roles, { 'attr': { 'class': 'form-control' } } ) }}
                        </div>
                        {{ form_widget(form) }}
                        <div class="col-xs-12">
                            <button class="btn btn-primary pull-left" type="submit">{{ 'Create'|trans({}, 'admin') }}</button>
                            <a class="btn btn-info pull-right" href="{{ path('admin_user_group') }}">
                                <i class="fa fa-list"></i> {{ 'Back to the list'|trans({}, 'admin') }}
                            </a>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
