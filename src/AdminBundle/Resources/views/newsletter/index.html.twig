{% extends "base.html.twig" %}

{% block title %}{{ '%entity% list'|trans({'%entity%': 'Newsletter'}, 'admin') }} - {{ parent() }}{% endblock %}

{% block body %}
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h1 class="box-title">{{ '%entity% list'|trans({'%entity%': 'Newsletter'}, 'admin') }}</h1>
                    <a href="#" class="btn btn-md btn-primary btn-flat pull-right"><i class="fa fa-file-excel-o"></i> Exporter</a>
                </div>
                <div class="box-body">
                    <table class="table table-striped table-hover table-bordered datatable records_list">
        <thead>
            <tr>
                <th scope="col">Email</th>
                <th scope="col">Ajout</th>
                <th scope="col">{{ 'Actions'|trans({}, 'admin') }}</th>
            </tr>
        </thead>
        <tbody>
            {% for newsletter in entities %}
                <tr>
                    <td><a href="{{ path('admin_newsletter_show', {id: newsletter.id}) }}">{{ newsletter.email }}</a></td>
                    <td>{% if newsletter.createdAt %}{{ newsletter.createdAt|date('Y-m-d H:i:s P') }}{% endif %}</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-default btn-sm" href="{{ path('admin_newsletter_show', {id: newsletter.id}) }}">
                                <i class="fa fa-file-o"></i> {{ 'show'|trans({}, 'admin') }}
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
