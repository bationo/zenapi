{% extends "base.html.twig" %}

{% block title %}{{ '%entity% creation'|trans({'%entity%': 'Cinéma'}, 'admin') }} - {{ parent() }}{% endblock %}

{% block body %}
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h1 class="box-title">{{ '%entity% creation'|trans({'%entity%': 'Cinéma'}, 'admin') }}</h1>
                    </div>
                    <div class="box-body">
                        {{ form_start(form, {action: path('admin_place_create')}) }}
                        <div class="form-group">
                            <label for="state_nom">Nom</label>
                            {{ form_widget( form.title, { "attr": { "class": "form-control" }}) }}
                            {{ form_errors( form.title ) }}
                        </div>
                        <div class="form-group">
                            <label for="state_nom">Prix (en F CFA)</label>
                            {{ form_widget( form.price, { "attr": { "class": "form-control" }}) }}
                            {{ form_errors( form.price ) }}
                        </div>
                        <div class="form-group">
                            <label for="state_nom">Localisation</label>
                            {{ form_widget( form.location, { "attr": { "class": "form-control" }}) }}
                            {{ form_errors( form.location ) }}
                        </div>
                        {{ form_widget(form) }}
                        <div class="row">
                            <div class="col-xs-12">
                                <button class="btn btn-primary pull-left" type="submit">{{ 'Create'|trans({}, 'admin') }}</button>
                                <a class="btn btn-info pull-right" href="{{ path('admin_place') }}">
                                    <i class="fa fa-list"></i> {{ 'Back to the list'|trans({}, 'admin') }}
                                </a>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
