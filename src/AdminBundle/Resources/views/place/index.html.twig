{% extends "base.html.twig" %}

{% block title %}{{ '%entity% list'|trans({'%entity%': 'Cinémas'}, 'admin') }} - {{ parent() }}{% endblock %}

{% block stylesheet %}
    <style>
        table.table-bordered tbody th, table.table-bordered tbody td {
            vertical-align: middle;
        }

        .image {
            width: 70px;
        }

        .image>img {
            display: inherit;
            max-width:100%;
        }
    </style>
{% endblock %}

{% block body %}
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h1 class="box-title">{{ '%entity% list'|trans({'%entity%': 'Cinémas'}, 'admin') }}</h1>
                        <a class="btn btn-info pull-right" href="{{ path('admin_place_new') }}">
                            <i class="fa fa-plus"></i> {{ 'Create a new entry'|trans({}, 'admin') }}
                        </a>
                    </div>
                    <div class="box-body">
                        <table class="table table-striped table-hover table-bordered datatable records_list">
                            <thead>
                            <tr>
                                <th scope="col">Nom</th>
                                <th scope="col">Prix</th>
                                <th scope="col">{{ 'Actions'|trans({}, 'admin') }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for place in entities %}
                                <tr>
                                    <td><a href="{{ path('admin_place_show', {id: place.id}) }}">{{ place.title }}</a></td>
                                    <td>{{ [place.price|localizednumber, 'F CFA']|join('') }}</td>
                                    <td>
                                        <div class="btn-group">
                                            <a class="btn btn-default btn-sm" href="{{ path('admin_place_show', {id: place.id}) }}">
                                                <i class="fa fa-file-o"></i> {{ 'show'|trans({}, 'admin') }}
                                            </a>
                                            <a class="btn btn-default btn-sm" href="{{ path('admin_place_edit', {id: place.id}) }}">
                                                <i class="fa fa-edit"></i> {{ 'edit'|trans({}, 'admin') }}
                                            </a>
                                            <a class="btn btn-default btn-sm" href="{{ path ( 'admin_theatrical_release', {id : place.id } ) }}">
                                                <i class="fa fa-list"></i> Programme
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
