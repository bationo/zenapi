{% extends "base.html.twig" %}

{% block title %}Album: {{ gallery.title }} - {{ parent() }}{% endblock %}

{% block body %}
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h1 class="box-title">{{ '%entity% creation'|trans({'%entity%': 'Photo'}, 'admin') }}</h1>
                    </div>
                    <div class="box-body">
                        {{ form_start(form) }}
                        <div class="form-group">
                            <label for="state_nom">Titre</label>
                            {{ form_widget( form.title, { "attr": { "class": "form-control" }}) }}
                            {{ form_errors( form.title ) }}
                        </div>
                        <div class="form-group">
                            <label for="state_nom">Description</label>
                            {{ form_widget( form.description, { "attr": { "class": "form-control" }}) }}
                            {{ form_errors( form.description ) }}
                        </div>
                        <div class="form-group">
                            <label for="state_nom">Image</label>
                            {{ form_widget( form.image.tempFile, { "attr": { "class": "form-control" }}) }}
                            {{ form_errors(form.image.tempFile) }}
                        </div>
                        {{ form_widget(form) }}
                        <div class="row">
                            <div class="col-xs-12">
                                <button class="btn btn-primary pull-left" type="submit">{{ 'Create'|trans({}, 'admin') }}</button>
                                <a class="btn btn-info pull-right" href="{{ path ( 'admin_gallery_image', {id : gallery.id } ) }}">
                                    <i class="fa fa-list"></i> {{ 'Back to the list'|trans({}, 'admin') }}
                                </a>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
