{% extends "base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}{{ '%entity% creation'|trans({'%entity%': 'admin'}, 'admin') }} - {{ parent() }}{% endblock %}

{% block body %}
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h1 class="box-title">{{ '%entity% creation'|trans({'%entity%': 'admin'}, 'admin') }}</h1>
                    </div>
                    <div class="box-body">
                        {{ form_start(form, {action: path('admin_user_create')}) }}
                        <div class="form-group">
                            <label for="user_username" class="required">{{ 'form.username'|trans }}</label>
                            {{ form_widget(form.username, {"attr": {"class":"form-control" }}) }}
                            {{ form_errors(form.username) }}
                        </div>
                        <div class="form-group">
                            <label for="user_email" class="required">Email</label>
                            {{ form_widget(form.email, {"attr": {"class":"form-control", "placeholder": 'form.email'|trans }}) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="form-group">
                            <label for="fos_user_change_password_form_plainPassword_first" class="required">{{ 'form.new_password'|trans }}</label>
                            {{ form_widget(form.plainPassword.first, {"attr": {"class":"form-control", "placeholder": 'form.new_password'|trans }}) }}
                            {{ form_errors(form.plainPassword.first) }}
                        </div>
                        <div class="form-group">
                            <label for="fos_user_change_password_form_plainPassword_second" class="required">{{ 'form.new_password_confirmation'|trans }}</label>
                            {{ form_widget(form.plainPassword.second, {"attr": {"class":"form-control", "placeholder": 'form.new_password_confirmation'|trans }}) }}
                            {{ form_errors(form.plainPassword.second) }}
                        </div>
                        <div class="form-group">
                            <label for="user_admin_nom" class="required">Nom</label>
                            {{ form_widget(form.admin.name, {"attr": {"class":"form-control", "placeholder": 'Nom' }}) }}
                            {{ form_errors(form.admin.name) }}
                        </div>
                        <div class="form-group">
                            <label for="user_admin_function" class="required">Fonction</label>
                            {{ form_widget(form.admin.function, {"attr": {"class":"form-control", "placeholder": 'Fonction' }}) }}
                            {{ form_errors(form.admin.function) }}
                        </div>
                        <div class="form-group">
                            <label for="user_admin_phone" class="required">Téléphone</label>
                            {{ form_widget(form.admin.phone, {"attr": {"class":"form-control", "placeholder": 'Téléphone' }}) }}
                            {{ form_errors(form.admin.phone) }}
                        </div>
                        <div class="form-group">
                            <label for="user_groups" class="required">Groupe (plusieurs: maintenir CTRL)</label>
                            {{ form_widget(form.groups, {"attr": {"class":"form-control" }}) }}
                            {{ form_errors(form.groups) }}
                        </div>
                        <div class="form-group">
                            <label for="user_avatar" class="required">Avatar</label>
                            {{ form_widget(form.tempFile, {"attr": {"class":"form-control" }}) }}
                            {{ form_errors(form.tempFile) }}
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <button class="btn btn-primary pull-left" type="submit">{{ 'Create'|trans({}, 'admin') }}</button>
                                <a class="btn btn-info pull-right" href="{{ path('admin_user') }}">
                                    <i class="fa fa-list"></i> {{ 'Back to the list'|trans({}, 'admin') }}
                                </a>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
