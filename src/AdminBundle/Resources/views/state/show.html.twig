{% extends "base.html.twig" %}

{% block title %}État - {{ parent() }}{% endblock %}

{% block body %}
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h1 class="box-title">État - {{ state.name }}</h1>
                    </div>
                    <div class="box-body">
                        <table class="table table-hover record_properties">
                            <tbody>
                            <tr>
                                <th scope="row">Nom</th>
                                <td>{{ state.name }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Slug</th>
                                <td>{{ state.slug }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Ajout</th>
                                <td>{{ ['Le ' ~ state.createdAt|date('d/m/Y à H:i:s'), state.createdBy.admin.name]|join(' par ') }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Dernière modification</th>
                                <td>{{ ['Le ' ~ state.updatedAt|date('d/m/Y à H:i:s'), state.updatedBy.admin.name]|join( ' par ' ) }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Id</th>
                                <td>{{ state.id }}</td>
                            </tr>
                            </tbody>
                        </table>

                        {{ form_start(delete_form) }}
                        {{ form_widget(delete_form) }}
                        <div class="btn-group record_actions">
                            <a class="btn btn-info" href="{{ path('admin_states') }}">
                                <i class="fa fa-list"></i> {{ 'Back to the list'|trans({}, 'admin') }}
                            </a>
                            <a class="btn btn-primary" href="{{ path('admin_states_edit', {id: state.id}) }}">
                                <i class="fa fa-edit"></i> {{ 'Edit'|trans({}, 'admin') }}
                            </a>
                            <button class="btn btn-danger" type="submit"><i class="fa fa-trash-o"></i> {{ 'Delete'|trans({}, 'admin') }}</button>
                        </div>

                        <input name="modal" type="hidden" value="0">
                        {{ form_end(delete_form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div id="delete_confirm" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3>{{ 'Confirm delete'|trans({}, 'admin') }}</h3>
                </div>
                <div class="modal-body">
                    <p>{{ 'You are about to delete an item'|trans({}, 'admin') }}, {{ 'this procedure is irreversible'|trans({}, 'admin') }}.</p>
                    <p>{{ 'Do you want to proceed?'|trans({}, 'admin') }}</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger">{{ 'Yes'|trans({}, 'admin') }}</button>
                    <button class="btn btn-default" data-dismiss="modal">{{ 'No'|trans({}, 'admin') }}</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
