{% extends "base.html.twig" %}

{% block title %}{{ '%entity% list'|trans({'%entity%': 'Commentaire'}, 'admin') }} - {{ parent() }}{% endblock %}

{% block body %}
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h1 class="box-title">{{ '%entity% list'|trans({'%entity%': 'Commentaire'}, 'admin') }}</h1>
                    </div>
                    <div class="box-body">
                        <table class="table table-striped table-hover table-bordered datatable records_list">
                            <thead>
                                <tr>
                                    <th scope="col">Pseudo</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Article</th>
                                    <th scope="col">Ã‰tat</th>
                                    <th scope="col">{{ 'Actions'|trans({}, 'admin') }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for comment in entities %}
                                    <tr>
                                        <td><a href="{{ path('admin_comments_show', {id: comment.id}) }}">{{ comment.pseudo }}</a></td>
                                        <td>{{ comment.email }}</td>
                                        <td>{{ comment.post.title }}</td>
                                        <td>{{ comment.state.name }}</td>
                                        <td>
                                            <div class="btn-group">
                                                <a class="btn btn-default btn-sm" href="{{ path('admin_comments_show', {id: comment.id}) }}">
                                                    <i class="fa fa-file-o"></i> {{ 'show'|trans({}, 'admin') }}
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>  
                    </div>
                </div>
            </div>
        </div>
    </section>      
{% endblock %}
