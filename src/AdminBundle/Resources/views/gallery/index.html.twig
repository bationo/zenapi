{% extends "base.html.twig" %}

{% block title %}{{ '%entity% list'|trans({'%entity%': 'Albums'}, 'admin') }} - {{ parent() }}{% endblock %}

{% block stylesheet %}
    <style>
        table.table-bordered tbody th, table.table-bordered tbody td {
            vertical-align: middle;
        }

        .image {
            width: 70px;
        }

        .image>img {
            display: inherit;
            max-width:100%;
        }
    </style>
{% endblock %}

{% block body %}
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h1 class="box-title">{{ '%entity% list'|trans({'%entity%': 'Albums'}, 'admin') }}</h1>
                        <a href="{{ path('admin_gallery_new' ) }}" class="btn btn-md btn-primary btn-flat pull-right"><i class="fa fa-plus"></i> {{ 'Create a new entry'|trans({}, 'admin') }}</a>
                    </div>
                    <div class="box-body">
                        <table class="table table-striped table-hover table-bordered datatable records_list">
                            <thead>
                            <tr>
                                <th scope="col">Image</th>
                                <th scope="col">Titre</th>
                                <th scope="col">{{ 'Actions'|trans({}, 'admin') }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for image in entities %}
                                <tr>
                                    <td class="image"><img src="{{ asset( image.ImageWebPath ) }}" alt="{{ image.title }}"></td>
                                    <td><a href="{{ path('admin_gallery_show', {id: image.id}) }}">{{ image.title }}</a></td>
                                    <td>
                                        <div class="btn-group">
                                            <a class="btn btn-default btn-sm" href="{{ path('admin_gallery_show', {id: image.id}) }}">
                                                <i class="fa fa-file-o"></i> {{ 'show'|trans({}, 'admin') }}
                                            </a>
                                            <a class="btn btn-default btn-sm" href="{{ path('admin_gallery_edit', {id: image.id}) }}">
                                                <i class="fa fa-edit"></i> {{ 'edit'|trans({}, 'admin') }}
                                            </a>
                                            <a class="btn btn-default btn-sm" href="{{ path ( 'admin_gallery_image', {id : image.id } ) }}">
                                                <i class="fa fa-list"></i> Photos
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
