{% extends "base.html.twig" %}

{% block title %}Programme: {{ place.title }} - {{ parent() }}{% endblock %}

{% block stylesheet %}{% endblock %}

{% block body %}
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h1 class="box-title">Programme: {{ place.title }}</h1>
                        <div class="btn-group pull-right">
                            <a class="btn btn-default" href="{{ path('admin_place') }}">
                                <i class="fa fa-angle-double-left"></i> Retour
                            </a>
                            <a class="btn btn-info" href="{{ path('admin_theatrical_release_create', {id: place.id}) }}">
                                <i class="fa fa-plus"></i> {{ 'Create a new entry'|trans({}, 'admin') }}
                            </a>
                        </div>
                    </div>
                    <div class="box-body">
                        <table class="table table-striped table-hover table-bordered datatable records_list">
                            <thead>
                                <tr>
                                    <th scope="col">Date et heure</th>
                                    <th scope="col">{{ 'Actions'|trans({}, 'admin') }}</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for theatricalrelease in entities %}
                                <tr>
                                    <td><a href="{{ path('admin_theatrical_release_show', {id: theatricalrelease.id}) }}">{{ theatricalrelease.dateTime|date('d/m/Y Ã  H:i:s') }}</a></td>
                                    <td>
                                        <div class="btn-group">
                                            <a class="btn btn-default btn-sm" href="{{ path('admin_theatrical_release_show', {id: theatricalrelease.id}) }}">
                                                <i class="fa fa-file-o"></i> {{ 'show'|trans({}, 'admin') }}
                                            </a>
                                            <a class="btn btn-default btn-sm" href="{{ path('admin_theatrical_release_update', {id: theatricalrelease.id}) }}">
                                                <i class="fa fa-edit"></i> {{ 'edit'|trans({}, 'admin') }}
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
