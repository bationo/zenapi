{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="login-box">
        <div class="login-logo">
            <p><b>Administration</b></p>
            <img src="{{ asset('theme/images/logos.png') }}"  style="max-width:100%">
        </div>
        <div class="login-box-body">
            <p class="login-box-msg">Mot de passe oubli√© ?</p>

            {{ form_start(form, { 'action': path('admin_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
            <div class="form-group">
                <label for="fos_user_resetting_form_plainPassword_first">{{ 'form.new_password'|trans }}</label>
                {{ form_widget(form.plainPassword.first, {"attr": {"class":"form-control"}}) }}
                {{ form_errors(form.plainPassword.first) }}
            </div>
            <div class="form-group">
                <label for="fos_user_resetting_form_plainPassword_second">{{ 'form.new_password_confirmation'|trans }}</label>
                {{ form_widget(form.plainPassword.second, {"attr": {"class":"form-control"}}) }}
                {{ form_errors(form.plainPassword.second) }}
            </div>
            {{ form_widget(form) }}
            <div class="row">
                <div class="col-xs-offset-5 col-xs-7">
                    <input type="submit" value="{{ 'resetting.reset.submit'|trans }}" class="btn btn-primary btn-block btn-flat"  />
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock fos_user_content %}
