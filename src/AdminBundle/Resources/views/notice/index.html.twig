{% extends "base.html.twig" %}

{% block title %}{{ '%entity% list'|trans({'%entity%': 'Avis'}, 'admin') }} - {{ parent() }}{% endblock %}

{% block body %}
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h1 class="box-title">{{ '%entity% list'|trans({'%entity%': 'Avis'}, 'admin') }}</h1>
                    </div>
                    <div class="box-body">
                        <table class="table table-striped table-hover table-bordered datatable records_list">
                            <thead>
                            <tr>
                                <th scope="col">Nom</th>
                                <th scope="col">Note</th>
                                <th scope="col">État</th>
                                <th scope="col">{{ 'Actions'|trans({}, 'admin') }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for notice in entities %}
                                <tr>
                                    <td><a href="{{ path('admin_notices_show', {id: notice.id}) }}">{{ notice.name }}</a></td>
                                    <td>{% for i in 0..notice.rate-1 %}★{% endfor %}{% if notice.rate < 5 %}{% for i in notice.rate+1..5 %}<span style="color:rgba(0,0,0,.2)">★</span>{% endfor %}{% endif %}</td>
                                    <td>{{ notice.state.name }}</td>
                                    <td>
                                        <div class="btn-group">
                                            <a class="btn btn-default btn-sm" href="{{ path('admin_notices_show', {id: notice.id}) }}">
                                                <i class="fa fa-file-o"></i> {{ 'show'|trans({}, 'admin') }}
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
