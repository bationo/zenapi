{% extends "base.html.twig" %}

{% block title %}{{ '%entity% creation'|trans({'%entity%': 'Cast'}, 'admin') }} - {{ parent() }}{% endblock %}

{% block stylesheet %}
    <style type="text/css">
        .slideThree {
            display: inline-block;
            margin: 0;
        }

        .slideThree:after {
            content: 'NON';
            color: #ff0000;
        }

        .slideThree:before {
            content: 'OUI';
        }
    </style>
{% endblock %}

{% block body %}
    <section class="content">
        <div class="row">
            {{ form_start(form, {action: path('admin_distribution_create')}) }}
            <div class="col-md-8">
                <div class="box box-primary">
                    <div class="box-header">
                        <h1 class="box-title">{{ '%entity% creation'|trans({'%entity%': 'Cast'}, 'admin') }}</h1>
                    </div>
                    <div class="box-body">
                        <div class="form-group">
                            <label for="cast_title">Nom</label>
                            {{ form_widget( form.name, { "attr": { "class": "form-control", "placeholder": "Nom" }}) }}
                            {{ form_errors(form.name) }}
                        </div>
                        <div class="form-group">
                            <label for="cast_title">Poste</label>
                            {{ form_widget( form.function, { "attr": { "class": "form-control", "placeholder": "Poste" }}) }}
                            {{ form_errors(form.function) }}
                        </div>
                        <div class="form-group">
                            {{ form_label( form.staring ) }}
                            <div class="slideThree">
                                {{ form_widget( form.staring, { 'attr': { 'class': '' } } ) }}
                                {{ form_label( form.staring, null, {
                                    'label': ' '
                                } ) }}
                            </div>
                            {{ form_errors( form.staring ) }}
                        </div>
                        <div class="form-group">
                            <label for="cast_description">Présentation</label>
                            {{ form_widget( form.presentation, { "attr": { "class": "form-control" }}) }}
                            {{ form_errors(form.presentation) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="box box-primary">
                    <div class="box-header">
                        <h1 class="box-title">Publier</h1>
                        <div class="box-tools pull-right">
                            <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="form-group">
                            <label for="cast_state">État</label>
                            {{ form_widget( form.state, { "attr": { "class": "form-control" }}) }}
                            {{ form_errors(form.state) }}
                        </div>
                        <div class="form-group">
                            <label for="cast_state">Publié le</label>
                            <div class='input-group date datetimepicker'>
                                {{ form_widget( form.publishedAt, { "attr": { "class": "form-control" }} ) }}
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button class="btn btn-primary pull-right" type="submit"><i class="fa fa-plus"></i> {#{ 'Create'|trans({}, 'admin') }#}Publier</button>
                    </div>
                </div>
                <div class="box box-primary">
                    <div class="box-header">
                        <h1 class="box-title">Image à la une</h1>
                        <div class="box-tools pull-right">
                            <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        </div>
                    </div>
                    <div class="box-body">
                        {{ form_widget( form.image.tempFile, { "attr": { "class": "form-control" }}) }}
                        {{ form_errors(form.image.tempFile) }}
                    </div>
                </div>
            </div>
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
