{% extends "base.html.twig" %}

{% block title %}{{ '%entity% edit'|trans({'%entity%': 'Vidéo'}, 'admin') }} - {{ parent() }}{% endblock %}

{% block stylesheet %}
    <style>
        .image>img {
            max-height: 250px;
            margin-bottom: 10px;
        }
    </style>
{% endblock %}

{% block body %}
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h1 class="box-title">{{ '%entity% creation'|trans({'%entity%': 'Vidéo'}, 'admin') }}</h1>
                    </div>
                    <div class="box-body">
                        {{ form_start(edit_form) }}
                        <div class="image"><img src="{{ video.thumbnail }}" alt="{{ video.title }}"></div>
                        <div class="form-group">
                            <label for="state_nom">Lien (Youtube, ex: https://www.youtube.com/watch?v=7zr6UoNG5ZM)</label>
                            {{ form_widget( edit_form.link, { "attr": { "class": "form-control" }}) }}
                            {{ form_errors(edit_form.link) }}
                        </div>
                        <div class="form-group">
                            <label for="state_nom">Titre</label>
                            {{ form_widget( edit_form.title, { "attr": { "class": "form-control" }}) }}
                            {{ form_errors( edit_form.title ) }}
                        </div>
                        <div class="form-group">
                            <label for="state_nom">Description</label>
                            {{ form_widget( edit_form.description, { "attr": { "class": "form-control" }}) }}
                            {{ form_errors( edit_form.description ) }}
                        </div>
                        {{ form_widget(edit_form) }}
                        <button class="btn btn-primary pull-left" type="submit">{{ 'Edit'|trans({}, 'admin') }}</button>
                        {{ form_end(edit_form) }}

                        {{ form_start(delete_form) }}
                        {{ form_widget(delete_form) }}
                        <div class="btn-group record_actions pull-right">
                            <a class="btn btn-info" href="{{ path('admin_gallery_video') }}">
                                <i class="fa fa-list"></i> {{ 'Back to the list'|trans({}, 'admin') }}
                            </a>
                            <button class="btn btn-danger" type="submit"><i class="fa fa-trash-o"></i> {{ 'Delete'|trans({}, 'admin') }}</button>
                        </div>

                        <input name="modal" type="hidden" value="0">
                        {{ form_end(delete_form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div id="delete_confirm" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3>{{ 'Confirm delete'|trans({}, 'admin') }}</h3>
                </div>
                <div class="modal-body">
                    <p>{{ 'You are about to delete an item'|trans({}, 'admin') }}, {{ 'this procedure is irreversible'|trans({}, 'admin') }}.</p>
                    <p>{{ 'Do you want to proceed?'|trans({}, 'admin') }}</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger">{{ 'Yes'|trans({}, 'admin') }}</button>
                    <button class="btn btn-default" data-dismiss="modal">{{ 'No'|trans({}, 'admin') }}</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
